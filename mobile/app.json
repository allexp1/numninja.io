{
  "expo": {
    "name": "NumNinja",
    "slug": "numninja",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.numninja.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for profile photos.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library for profile photos."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366f1"
      },
      "package": "com.numninja.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#6366f1",
      "androidMode": "default",
      "androidCollapsedTitle": "NumNinja",
      "iosDisplayInForeground": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      },
      "apiUrl": "https://numninja.io/api",
      "revenueCatApiKey": {
        "ios": "appl_XXXXXXXXXXXXXXXXXXXXXX",
        "android": "goog_XXXXXXXXXXXXXXXXXXXXXX"
      }
    },
    "plugins": [
      "expo-notifications",
      "expo-secure-store"
    ]
  }
}